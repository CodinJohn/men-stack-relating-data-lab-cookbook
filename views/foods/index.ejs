<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
<Ul>
    <% if (pantryItems && pantryItems.length > 0) { %>
    <% pantryItems.forEach(item => { %>
        <li>
            <%= item.text %> - <%= item.isInPantry ? 'In Pantry' : 'Not in Pantry'%>
            <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
            </form>
            <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit</a>
        </li>
      <% }); %>
      <% } else { %>
        <li>No items in your pantry</li>
    <% } %>
</Ul>
    <p><a href="/users/<%= user._id %>/foods/new">Add New Item!</a></p>
  </body>
</html>

